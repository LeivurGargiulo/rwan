---
import { Icon } from "astro-icon/components";
---

<section class="flex flex-col items-center lg:py-5">
  <div class="card card-xl lg:card-side bg-base-100 outline outline-neutral m-5 transform transition-transform hover:scale-105 duration-300 hover:shadow-md shadow-neutral" data-aos="fade">
    <div class="card-body">
      <h2 class="card-title text-5xl" data-aos="fade-right">Rodrigo <br /> Martínez</h2>
      <p class="text-xl" data-aos="fade-right">Campana, Buenos Aires, <br /> Argentina.</p>
      <button class="btn btn-neutral justify-start" data-aos="fade-right">
        <Icon name="mdi:pencil" class="mr-2" />
        DISEÑADOR GRÁFICO</button
      >
      <button class="btn btn-neutral justify-start" data-aos="fade-right">
        <Icon name="mdi:animation" class="mr-2" />
        ANIMADOR</button
      >
    </div>
    <figure class="mx-3 py-3">
      <img class="rounded-lg border border-neutral" data-aos="fade" data-aos-delay="200"
        src="https://placehold.co/400"
        alt="Album"
      />
    </figure>
    <div class="card-body">
      <div class="card-actions grid grid-cols-3 gap-4" data-aos="fade-left">
        <button class="btn btn-neutral" data-aos="fade-left" >Left</button>
        <button class="btn btn-neutral col-span-2" data-aos="fade-left" data-aos-delay="200">Right</button>
        <button class="btn btn-neutral col-span-2" data-aos="fade-left" >Left</button>
        <button class="btn btn-neutral" data-aos="fade-left" data-aos-delay="200">Right</button>
        <button class="btn btn-neutral" data-aos="fade-left" >Left</button>
        <button class="btn btn-neutral col-span-2" data-aos="fade-left" data-aos-delay="200">Right</button>
        <button class="btn btn-neutral col-span-2" data-aos="fade-left" >Left</button>
        <button class="btn btn-neutral" data-aos="fade-left" data-aos-delay="200">Right</button>
        <button class="btn btn-neutral" data-aos="fade-left" >Left</button>
        <button class="btn btn-neutral col-span-2" data-aos="fade-left" data-aos-delay="200">Right</button>
        <button class="btn btn-neutral col-span-2" data-aos="fade-left" >Left</button>
        <button class="btn btn-neutral" data-aos="fade-left" data-aos-delay="200">Right</button>
        <button class="btn btn-neutral" data-aos="fade-left" >Left</button>
        <button class="btn btn-neutral col-span-2" data-aos="fade-left" data-aos-delay="200">Right</button>
      </div>
    </div>
  </div>
</section>
