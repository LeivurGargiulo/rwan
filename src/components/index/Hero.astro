---
import { Icon } from "astro-icon/components";
---

<section class="flex flex-col items-center lg:py-5">
  <div
    class="card card-xl lg:card-side bg-base-100 outline outline-neutral m-5 transform hover:shadow-lg shadow-neutral hover:animate-pulse"
    data-aos="fade"
  >
    <div class="card-body">
      <h2 class="card-title text-5xl" data-aos="fade-right">
        Rodrigo <br /> Martínez
      </h2>
      <p class="text-xl" data-aos="fade-right">
        Campana, Buenos Aires, <br /> Argentina.
      </p>
      <button class="btn btn-neutral justify-start w-60" data-aos="fade-right">
        <Icon name="mdi:pencil" class="mr-2" />
        DISEÑADOR GRÁFICO</button
      >
      <button class="btn btn-neutral justify-start w-60" data-aos="fade-right">
        <Icon name="mdi:animation" class="mr-2" />
        ANIMADOR</button
      >
    </div>
    <div class="hidden lg:avatar lg:indicator">
      <figure class="mx-3 py-3">
        <img
          class="rounded-lg border border-neutral"
          data-aos="fade"
          data-aos-delay="200"
          src="https://placeholder.pics/svg/400"
          alt="Album"
        />
      </figure>
    </div>
    <div class="lg:hidden">
          <figure class="mx-3 py-3">
      <img
        class="rounded-lg border border-neutral"
        data-aos="fade"
        data-aos-delay="200"
        src="https://placeholder.pics/svg/400"
        alt="Album"
      />
    </figure>
    </div>
    <div class="card-body justify-end">
      <div class="card-actions grid grid-cols-3 gap-4" data-aos="fade-left">
        <button class="btn bg-gray-300 text-secondary" data-aos="fade-left"
          >#Proactivo</button
        >
        <button
          class="btn bg-gray-300 text-secondary col-span-2"
          data-aos="fade-left"
          data-aos-delay="200">#Creativo</button
        >
        <button
          class="btn bg-gray-300 text-secondary col-span-2"
          data-aos="fade-left"
          data-aos-delay="300">#Enfoque Minimalista y Moderno</button
        >
        <button
          class="btn bg-gray-300 text-secondary"
          data-aos="fade-left"
          data-aos-delay="400">#Constante</button
        >
        <button
          class="btn bg-gray-300 text-secondary"
          data-aos="fade-left"
          data-aos-delay="500">#Docente</button
        >
        <button
          class="btn bg-gray-300 text-secondary col-span-2"
          data-aos="fade-left"
          data-aos-delay="600">#Especialista en Branding</button
        >
        <button
          class="btn bg-gray-300 text-secondary col-span-2"
          data-aos="fade-left"
          data-aos-delay="700">#Animación y Diseño</button
        >
        <button
          class="btn bg-gray-300 text-secondary"
          data-aos="fade-left"
          data-aos-delay="800">#Determinado</button
        >
      </div>
    </div>
  </div>
</section>
